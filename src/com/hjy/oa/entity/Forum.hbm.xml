<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hjy.oa.entity.Forum">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="description"/>
        <property name="position"/>
        <property name="articleCount"/>
        <property name="topicCount"/>
        <set name="topicSet">
            <key column="id"></key>
            <one-to-many class="com.hjy.oa.entity.Topic"/>
        </set>
        <many-to-one  name="lastTopic"  column="lastTopicId" class="com.hjy.oa.entity.Topic" />
    </class>
</hibernate-mapping>